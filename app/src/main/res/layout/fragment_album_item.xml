<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_album_layout_up"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_top_color"
            android:layout_above="@+id/tv_album_item_albumname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/view3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_top_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="artist"
            android:id="@+id/tv_album_item_artist"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="albumName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/tv_album_item_albumname"
            android:layout_above="@+id/tv_album_item_artist"
            android:layout_alignLeft="@+id/tv_album_item_artist"
            android:layout_alignStart="@+id/tv_album_item_artist" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_album_item_ico_up"
            android:layout_above="@+id/view3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    <ListView
        android:id="@+id/lv_album_item_music"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_album_layout_up"
        android:layout_height="match_parent"
        />


</RelativeLayout>
