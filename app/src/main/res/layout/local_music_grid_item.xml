<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/music_list_icon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/music_list_selected"
            android:src="@mipmap/img"
            android:layout_width="130dp"
            android:layout_height="130dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_music_list_title"
            android:text="音乐标题"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_music_list_artist"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="#FFF"
            android:text="艺术家"
            android:layout_below="@id/tv_music_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_aplist_btn"
            android:layout_marginLeft="100dp"
            android:src="@drawable/iv_list_love_whilte"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

</RelativeLayout>